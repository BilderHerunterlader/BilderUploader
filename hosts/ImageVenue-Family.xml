<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<hoster name="ImageVenue-Family" version="0.1" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="http://www.w3schools.com hoster.xsd">
	<displayName>ImageVenue (Family safe)</displayName>
	<displayIcon>imagevenue.ico</displayIcon>
	<homePage>http://www.imagevenue.com</homePage>

	<maxFileSize>6000000</maxFileSize>
	<fileNameFilter>(?i)\.(?:jpg|jpeg)$</fileNameFilter>

	<uploadStep>
		<url>http://www.imagevenue.com/upload.php</url>
		<fieldName>userfile[]</fieldName>
		<additionalField fieldName="imgcontent" fieldValue="safe" />
		<additionalField fieldName="MAX_FILE_SIZE" fieldValue="" />
		<additionalField fieldName="action" fieldValue="1" />
		<additionalField fieldName="img_resize" fieldValue="" />
		<additionalField fieldName="submit" fieldValue="Go" />
	</uploadStep>
	
	<uploadResultStep>
		<regex>
			<pattern>(?ism)(\[URL=[^\]]+\]\[IMG\][^\[]+\[/IMG\]\[/URL\])</pattern>
			<replacement>$1</replacement>
		</regex>
	</uploadResultStep>
</hoster>
